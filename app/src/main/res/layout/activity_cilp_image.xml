<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xile.script.base.ui.view.cutimage.CilpImageLayout
        android:id="@+id/cilpimage_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sure_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_80"
            android:gravity="center"
            android:text="确定" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:text="取消" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_60"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expand_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_zoom_in_24" />

        <ImageView
            android:id="@+id/shrink_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_zoom_out_24" />
    </LinearLayout>

</RelativeLayout>