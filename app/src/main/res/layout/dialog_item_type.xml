<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <LinearLayout
        android:id="@+id/diolog_message_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/while_bg"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="上传脚本"
            android:textColor="@color/color_e0000000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/dialog_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/while_bg"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="上传脚本"
            android:textColor="@color/color_e0000000"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_extra"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/dialog_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/while_bg"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="上传脚本"
                android:textColor="@color/color_e0000000"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/dialog_item_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/while_bg"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="上传脚本"
                android:textColor="@color/color_e0000000"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/dialog_item_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/while_bg"
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:text="上传脚本"
                android:textColor="@color/color_e0000000"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>