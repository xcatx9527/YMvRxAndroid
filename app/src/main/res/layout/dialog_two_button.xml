<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal|center_vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:paddingBottom="@dimen/dp_8">

        <TextView
            android:id="@+id/title"
            style="@style/main_text_343434_18sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/dialog_title"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/dialog_img_two_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_one_button"
                style="@style/main_text_ffffff_16sp"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/confirm" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dp_40" />

            <TextView
                android:id="@+id/dialog_two_button"
                style="@style/main_text_ffffff_16sp"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cancel" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dp_40" />

            <TextView
                android:id="@+id/dialog_three_button"
                style="@style/main_text_ffffff_16sp"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/cancel" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
