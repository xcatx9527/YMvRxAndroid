<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/color_F5F5F5"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.xile.script.base.ui.view.TitleLayout
        android:id="@+id/tl_tle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.xile.script.base.ui.view.TitleLayout>

    <FrameLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_50">

        <TextView
            android:background="@color/color_FF9700"
            android:layout_width="@dimen/size_dp_5"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_choose_function"
            android:textSize="@dimen/text_sp_14"
            android:textColor="@color/color_343434"
            android:layout_gravity="center_vertical"
            android:text="@string/text_chose_features"
            android:layout_marginLeft="@dimen/size_dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_features"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/size_dp_30"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/size_dp_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>