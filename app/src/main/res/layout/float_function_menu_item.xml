<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="@dimen/size_dp_50">


    <ImageView
        android:id="@+id/img_feature"
        android:layout_width="@dimen/size_dp_20"
        android:layout_height="@dimen/size_dp_20"
        android:layout_marginLeft="@dimen/size_dp_20"
        android:src="@null"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_feature"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/text_sp_14"
        android:textIsSelectable="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_343434"
        />

    <TextView
        android:layout_width="@dimen/size_dp_10"
        android:layout_height="@dimen/size_dp_15"
        android:layout_marginRight="@dimen/size_dp_25"
        android:layout_alignParentRight="true"
        android:background="@drawable/feature_menu_tangle"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:background="@color/color_CAC8CD"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_dp_0_5"/>

</RelativeLayout>