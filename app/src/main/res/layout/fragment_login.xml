<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.yzy.example.repository.model.LoginViewModel" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="click"
            type="com.yzy.example.component.login.LoginFragment.ProxyClick" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!--        <include-->
        <!--            layout="@layout/layout_comm_title"-->
        <!--            />-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/loginUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="账号"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="16"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@={vm.username}"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/loginClear"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="6dp"
                        android:onClick="@{()->click.clear()}"
                        android:src="@drawable/ic_clear"
                        android:visibility="@{vm.username.length()>0?view.VISIBLE:view.GONE}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/loginPwd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@={vm.password}"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        bind:showPwd="@{vm.isShowPwd}" />

                    <CheckBox
                        android:id="@+id/loginKey"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="6dp"
                        android:button="@drawable/keyvisibily_selector"
                        android:checked="false"
                        android:visibility="@{vm.password.length()>0?view.VISIBLE:view.GONE}"
                        bind:checkChange="@{click.onCheckedChangeListener}" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginSub"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:onClick="@{()->click.login()}"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/loginGoregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="12dp"
                    android:onClick="@{()->click.goRegister()}"
                    android:paddingStart="18dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="去注册"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>