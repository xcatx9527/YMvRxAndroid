<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.yzy.example.repository.model.PlayViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_comm_title" />

        <LinearLayout
            android:id="@+id/ll_choose_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commLayoutTitleBarView"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">

                <TextView
                    android:id="@+id/sort_detail"
                    style="@style/main_text_333333_16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/sort_detail" />

                <ImageView
                    android:id="@+id/img_sort_way"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/date_sort" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_bottom_item"
            android:layout_below="@id/ll_choose_play" />


        <LinearLayout
            android:id="@+id/ll_bottom_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" />

            <LinearLayout
                android:id="@+id/ashes_server_script"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/main_text_343434_16sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/text_flush_count" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/jt_right" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>