<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.yzy.example.repository.model.RegisterViewModel" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="click"
            type="com.yzy.example.component.login.RegisterFragment.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <include layout="@layout/layout_comm_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="48dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registerUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="账号"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="16"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@={vm.username}"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/registerClear"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="6dp"
                        android:onClick="@{()->click.clear()}"
                        android:src="@drawable/ic_clear"
                        android:visibility="@{vm.username.length()>0?view.VISIBLE:view.GONE}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registerPwd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@={vm.password}"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        bind:showPwd="@{vm.isShowPwd()}" />

                    <CheckBox
                        android:id="@+id/registerKey"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="6dp"
                        android:button="@drawable/keyvisibily_selector"
                        android:checked="false"
                        android:visibility="@{vm.password.length()>0?view.VISIBLE:view.GONE}"
                        bind:checkChange="@{click.onCheckedChangeListener1}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registerPwd1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="确认密码"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@={vm.password2}"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        bind:showPwd="@{vm.isShowPwd2()}" />

                    <CheckBox
                        android:id="@+id/registerKey1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="6dp"
                        android:button="@drawable/keyvisibily_selector"
                        android:checked="false"
                        android:visibility="@{vm.password2.length()>0?view.VISIBLE:view.GONE}"
                        bind:checkChange="@{click.onCheckedChangeListener2}" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registerSub"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:onClick="@{()->click.register()}"
                    android:text="注册并登录"
                    android:textSize="16dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>